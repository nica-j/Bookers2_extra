<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: Book.new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.favorited_by?(current_user) %>
              <%= link_to book_favorite_path(@book), method: :delete, class: "text-danger" do %>
                ♥<%= @book.favorites.count %>
              <% end %>
            <% else %>
              <%= link_to book_favorite_path(@book), method: :post do %>
                ♥<%= @book.favorites.count %>
              <% end %>
            <% end %>
          </td>
          <td>コメント数：<%= @book.book_comments.count %></td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></td>
          <% end %>
        </tr>
      </table>
      <table class='table'>
        <% @book_comments.each do |t| %>
          <tr>
            <% user = User.find(t.user_id) %>
            <td>
              <%= link_to user_path(user) do %>
                <%= image_tag user.get_profile_image, size:"100x100" %><br>
                <%= user.name %>
              <% end %>
            </td>
            <td><%= t.comment %></td>
            <td>
              <% if t.user_id == current_user.id %>
                <%= link_to 'Destroy', book_book_comment_path(t), method: :delete, class: "btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>  
        <% end %>
      </table>
      <div>
        <%= render 'comment', {book: @book, book_comment: BookComment.new} %>
      </div>
    </div>
  </div>
</div>